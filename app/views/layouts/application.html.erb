<!DOCTYPE html>
<html>
  <head>
    <title>Gitchhiking</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', 'https://fonts.googleapis.com/css?family=Fira+Sans+Extra+Condensed', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6 col-lg-6 col-lg-offset-3 col-md-offset-3">
          <%=image_tag("logo.png", alt: "Gitchhiking", class: "img-responsive center-block")%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6 col-lg-6 col-lg-offset-3 col-md-offset-3">
          <h2 class="subtitle">Your starred Github repos weekly digest</h2>
        </div>
      </div>
      <div class="row">
        <div class="content col-md-6 col-lg-6 col-lg-offset-3 col-md-offset-3">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
